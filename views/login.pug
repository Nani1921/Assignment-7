doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="/css/style.css")
    title Login
  body
    header
      h2 Login
    form(action="/user/login" method="POST")
      label(for="loginEmail" class="form-label") Email:
      input(type="email" id="loginEmail" class="form-control" name="email" required)
      label(for="loginPassword" class="form-label") Password:
      input(type="password" id="loginPassword" class="form-control" name="password" required)
      button(type="submit" class="btn") Login
      p Don't have an account? 
        a(href="/user/register") Register

    footer.bg-yellow-300.py-4.text-center
      p &copy; 2024 E-Commerce Project
